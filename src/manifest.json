{
  "name": "Stay Focused",
  "description": "Block list of websites, to keep you focusing in your work.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48_inactive.ico",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Stay Focused",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs"
  ]
}
